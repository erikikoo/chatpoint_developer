<%= render partial: 'clients/admin/menu_option'%>
<%= render 'clients/admin/filter' %>
<% if @clients.nil? %>
		Você não possui clientes cadastrados
	<% else %>
		<table class='table table-striped table-hover'>		
				<thead class='text-center'>
					<th>Cliente</th>
					<th>Cidade</th>
					<th>Bairro</th>
					<th>Contato</th>
					<th>Fone</th>
					<!--<th>Url</th>-->
					<th>Status</th>
					<!--<th>usuarios online</th>-->
					<th>Ações</th>
				</thead>
				<tbody>				
						<% @clients.each do |client| %>
							
							<tr >	
								<td><%= client.cliente %></td>	
								<td><%= client.cidade %></td>	
								<td><%= client.bairro %></td>	
								<td><%= client.contato %></td>	
								<td><%= client.fone %></td>	
								<!--<td><% client.url %></td>	-->
								<td class='text-center'><%= status(client.status) %></td>	
								
								
								<!--<td class='text-center'>online</td>-->
								
								<td>
									<%= link_to 'Editar', edit_client_path(client), remote: true  %>
									<%= link_to 'Apagar', client_path(client), 
								        method: :delete, 
								        remote: true,
								        data: { confirm: 'Deseja prosseguir?' } %>
								</td>	
							</tr>			
						<% end %>			
					
				</tbody>
		</table>
	<% end %>

	<script>
		
		$(".btnLimpar").click(function(event) {			
			$("#q_cliente_cont").val('');
			$("#q_cidade_cont").val('');
			$("#q_bairro_cont").val('');
			$("#q_status_present").val('');
			$("#client_search").submit();
			$(this).removeClass('btnLimpar').addClass('btnPesquisa');
		});
		
	</script>