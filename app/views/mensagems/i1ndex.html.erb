<p id="notice"><%= notice %></p>

<h1>Mensagems</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>All</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mensagems.each do |mensagem| %>
      <tr>
        <td><%= mensagem.user %></td>
        <td><%= mensagem.content %></td>
        <td><%= mensagem.all %></td>
        <td><%= link_to 'Show', mensagem %></td>
        <td><%= link_to 'Edit', edit_mensagem_path(mensagem) %></td>
        <td><%= link_to 'Destroy', mensagem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

